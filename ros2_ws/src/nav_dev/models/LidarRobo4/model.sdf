<sdf version="1.8">
    <model name="LidarRobo4">
    <pose>0 0 0 0 0 0</pose>

      <link name="base_footprint"/>

      <link name="base_link">
        <inertial>
          <!--恐らく、このposeの値が重心になる-->
          <pose>0.15 0 0 0 0 0</pose>
          <mass>1.14395</mass>
          <inertia>
              <ixx>0.095329</ixx>
              <ixy>0</ixy>
              <ixz>0</ixz>
              <iyy>0.381317</iyy>
              <iyz>0</iyz>
              <izz>0.476646</izz>
          </inertia>
        </inertial>
        <collision name="base_collision">
          <pose>-0.03 0.08 0.04 0 0 -1.5708</pose>
          <geometry>
            <mesh>
              <scale>1 1 1</scale>
              <uri>model://LidarRobo/meshes/2DRoboPrac.stl</uri>
            </mesh>
          </geometry>
        </collision>
        <visual name="base_visual">
          <pose>-0.03 0.08 0.04 0 0 -1.5708</pose>
          <geometry>
            <mesh>
              <scale>1 1 1</scale>
              <uri>model://LidarRobo/meshes/2DRoboPrac.dae</uri>
            </mesh>
          </geometry>
          <material>
          <diffuse> 0.921568627 0.925490196 0.941176471 1</diffuse>
          <ambient> 0.921568627 0.925490196 0.941176471 1</ambient>
          <specular>0.921568627 0.925490196 0.941176471 1</specular>
        </material>
        </visual>
      </link>
      
      <joint name="base_joint" type="fixed">
      <pose>0 0 0.01 0 0 0</pose>
      <parent>base_footprint</parent>
      <child>base_link</child>
    </joint>

      <!--lidarの取り付け-->
      <link name='base_scan'>
        <inertial>
          <pose>0.18 0 0.04 0 0 0</pose>
          <inertia>
            <ixx>0.001</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.001</iyy>
            <iyz>0</iyz>
            <izz>0.001</izz>
          </inertia>
          <mass>0.114</mass>
          </inertial>
          <collision name="lidar_sensor_collision">
            <pose>0.18 0 0.04 0 0 0</pose>
            <geometry>
              <cylinder>
                  <radius>0.02</radius>
                  <length>0.05</length>
              </cylinder>
            </geometry>
          </collision>
          <visual name='lidar_sensor_visual'>
            <pose>0.18 0 0.04 0 0 0</pose>
            <geometry>
                <cylinder>
                    <radius>0.02</radius>
                    <length>0.05</length>
                </cylinder>
            </geometry>
            <material>
              <ambient>1.0 0.0 0.0 1</ambient>
              <diffuse>1.0 0.0 0.0 1</diffuse>
              <specular>1.0 0.0 0.0 1</specular>
            </material>
          </visual>
        <sensor name='gpu_lidar' type='gpu_lidar'>
          <pose>0.18 0 0.04 0 0 0</pose>
          <topic>scan</topic>
          <!--fixed_frameを/tfと合わせるための設定、sensorが付いてるlinkの名前に合わせる-->
          <ignition_frame_id>base_scan</ignition_frame_id>
          <update_rate>5</update_rate> <!--Hz-->
          <!--光線の設定-->
          <ray>
            <scan>
              <horizontal>
                <samples>360</samples>
                <resolution>1</resolution>
                <min_angle>0</min_angle>
                <max_angle>6.28</max_angle>
              </horizontal>
            </scan>
            <range>
              <min>0.120000</min>
              <max>20.0</max>
              <resolution>0.015000</resolution>
            </range>
            <noise>
              <type>gaussian</type>
              <mean>0.0</mean>
              <stddev>0.01</stddev>
            </noise>
          </ray>
          <always_on>true</always_on>
          <visualize>true</visualize>
        </sensor>
      </link>

      <joint name="lidar_joint" type="fixed">
          <pose>0.18 0 0.04 0 0 0</pose>
          <parent>base_link</parent>
          <child>base_scan</child>
      </joint>

      <link name='wheel_left_link'>
        <inertial>
          <pose>0 -0.095 0 -1.5707 0 0</pose>
          <inertia>
            <ixx>1.1175580e-05</ixx>
            <ixy>-4.2369783e-11</ixy>
            <ixz>-5.9381719e-09</ixz>
            <iyy>1.1192413e-05</iyy>
            <iyz>-1.4400107e-11</iyz>
            <izz>2.0712558e-05</izz>
          </inertia>
          <mass>0.1</mass>
        </inertial>
        <collision name='wheel_left_collision'>
          <pose>0 -0.095 0 -1.5707 0 0</pose>
          <geometry>
              <cylinder>
                  <radius>0.035</radius>
                  <length>0.018</length>
              </cylinder>
          </geometry>
        </collision>
        <visual name='wheel_left_visual'>
          <pose>0 -0.095 0 -1.5707 0 0</pose>
          <geometry>
              <cylinder>
                  <radius>0.035</radius>
                  <length>0.018</length>
              </cylinder>
          </geometry>
          <material>
              <ambient>1.0 0.0 0.0 1</ambient>
              <diffuse>1.0 0.0 0.0 1</diffuse>
              <specular>1.0 0.0 0.0 1</specular>
          </material>
        </visual>
      </link>

      <joint name='wheel_left_joint' type='revolute'>
        <pose>0 -0.095 0 -1.5707 0 0</pose>
        <parent>base_link</parent>
        <child>wheel_left_link</child>
        <axis>
          <xyz>0 0 1</xyz> <!--can be defined as any frame or even arbitrary frames-->
        </axis>
      </joint>

      <link name='wheel_right_link'>
        <inertial>
          <pose>0 0.095 0 -1.5707 0 0</pose>
          <inertia>
            <ixx>1.1175580e-05</ixx>
            <ixy>-4.2369783e-11</ixy>
            <ixz>-5.9381719e-09</ixz>
            <iyy>1.1192413e-05</iyy>
            <iyz>-1.4400107e-11</iyz>
            <izz>2.0712558e-05</izz>
          </inertia>
          <mass>0.1</mass>
        </inertial>
        <collision name='wheel_right_collision'>
          <pose>0 0.095 0 -1.5707 0 0</pose>
          <geometry>
              <cylinder>
                  <radius>0.035</radius>
                  <length>0.018</length>
              </cylinder>
          </geometry>
        </collision>
        <visual name='wheel_right_visual'>
          <pose>0 0.095 0 -1.5707 0 0</pose>
          <geometry>
              <cylinder>
                  <radius>0.035</radius>
                  <length>0.018</length>
              </cylinder>
          </geometry>
          <material>
              <ambient>1.0 0.0 0.0 1</ambient>
              <diffuse>1.0 0.0 0.0 1</diffuse>
              <specular>1.0 0.0 0.0 1</specular>
          </material>
        </visual>
      </link>

      <joint name='wheel_right_joint' type='revolute'>
        <pose>0 0.095 0 -1.5707 0 0</pose>
        <parent>base_link</parent>
        <child>wheel_right_link</child>
        <axis>
          <xyz>0 0 1</xyz> <!--can be defined as any frame or even arbitrary frames-->
        </axis>
      </joint>

      <!--caster wheel-->
      <link name='caster'>
        <pose>0.18 0 -0.02 0 0 0</pose>
        <inertial>
          <mass>0.001</mass>
            <inertia>
              <ixx>0.00001</ixx>
              <ixy>0.000</ixy>
              <ixz>0.000</ixz>
              <iyy>0.00001</iyy>
              <iyz>0.000</iyz>
              <izz>0.00001</izz>
            </inertia>
        </inertial>
        <collision name='collision'>
          <geometry>
              <sphere>
                  <radius>0.015</radius>
              </sphere>
          </geometry>
          </collision>
        <visual name='visual'>
          <geometry>
              <sphere>
                  <radius>0.02</radius>
              </sphere>
          </geometry>
          <material>
              <ambient>0.0 1 0.0 1</ambient>
              <diffuse>0.0 1 0.0 1</diffuse>
              <specular>0.0 1 0.0 1</specular>
          </material>
        </visual>
      </link>

      <!--ballタイプのジョイントはrobot_state_publihserが変換しないので、rviz2側でtfを取得できない-->
      <joint name='caster_joint' type='ball'>
          <parent>base_link</parent>
          <child>caster</child>
      </joint>
      
      <plugin
          filename="ignition-gazebo-odometry-publisher-system"
          name="ignition::gazebo::systems::OdometryPublisher">
          <odom_publish_frequency>50</odom_publish_frequency>
          <odom_topic>/odom</odom_topic>
          <odom_frame>odom</odom_frame>
          <robot_base_frame>base_footprint</robot_base_frame>
          <tf_topic>/odom/tf</tf_topic>
        </plugin>

      <!--差動二輪のためのプラグイン-->
      <plugin
          filename="libignition-gazebo-diff-drive-system.so"
          name="ignition::gazebo::systems::DiffDrive">
          <left_joint>wheel_left_joint</left_joint>
          <right_joint>wheel_right_joint</right_joint>
          <wheel_separation>0.19</wheel_separation>
          <wheel_radius>0.035</wheel_radius>
          <!--速度司令を受け取るトピックを指定-->
          <topic>cmd_vel</topic>
      </plugin>

      <!--↓ros2との連携に使うプラグインたち↓-->
      
      <plugin filename="libignition-gazebo-joint-state-publisher-system.so" 
        name="ignition::gazebo::systems::JointStatePublisher">
        <topic>joint_states</topic>
      </plugin>
  </model>
</sdf>