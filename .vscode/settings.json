{
    "editor.tabSize": 8,
    "editor.rulers": [
        100
    ],
    "files.associations": {
        "*.rviz": "yaml",
        "*.sdf": "xml",
        "*.urdf": "xml",
        "*.dae": "xml",
        "*.repos": "yaml",
        "*.world": "xml",
        "*.xacro": "xml",
        "ranges": "cpp",
        "chrono": "cpp",
        "cmath": "cpp"
    },
    "C_Cpp.default.intelliSenseMode": "linux-gcc-x86",
    "C_Cpp.formatting": "disabled",
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/build": true,
        "**/install": true,
        "**/log": true
    },
    "python.analysis.autoImportCompletions": true,
    "python.analysis.typeCheckingMode": "basic"
}